<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml" fx:controller="stockapp.modules.nativegraph.NativeGraphController">
  <center>
    <VBox spacing="10.0">
      <children>
        <HBox alignment="CENTER_LEFT" spacing="50.0">
          <children>
            <Label fx:id="stockName" text="Stock Name">
              <font>
                <Font size="30.0" fx:id="x1" />
              </font>
            </Label>
            <Label fx:id="stockPrice" font="$x1" text="(Stock Price)" />
          </children>
          <padding>
            <Insets left="30.0" right="30.0" />
          </padding>
        </HBox>
        <LineChart fx:id="chart">
          <xAxis>
            <CategoryAxis side="BOTTOM" />
          </xAxis>
          <yAxis>
            <NumberAxis side="LEFT" />
          </yAxis>
        </LineChart>
        <HBox>
          <children>
            <Label text="Label" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
          </children>
        </HBox>
        <Separator />
        <HBox>
          <children>
            <Label text="Label" />
            <Button mnemonicParsing="false" text="Button" />
          </children>
        </HBox>
      </children>
      <BorderPane.margin>
        <Insets bottom="30.0" left="30.0" right="15.0" top="30.0" fx:id="x2" />
      </BorderPane.margin>
    </VBox>
  </center>
  <right>
    <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="CENTER" BorderPane.margin="$x2">
      <children>
        <SplitMenuButton mnemonicParsing="false" text="Stock Index" />
        <ListView prefWidth="180.0" />
        <Separator prefWidth="200.0" />
        <VBox>
          <children>
            <Label text="Search stock" />
            <HBox>
              <children>
                <TextField fx:id="searchField" />
                <Button mnemonicParsing="false" text="Go" onAction="#searchStock"/>
              </children>
            </HBox>
          </children>
        </VBox>
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
  </right>
  <top>
    <HBox alignment="CENTER_RIGHT">
      <children>
        <Button mnemonicParsing="false" onAction="#returnToMain" text="Return" />
      </children>
      <BorderPane.margin>
        <Insets left="20.0" right="20.0" top="20.0" />
      </BorderPane.margin>
    </HBox>
  </top>
</BorderPane>
